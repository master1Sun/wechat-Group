page {
  background: #e6e6e6;
}

.bg-title {
  font-size: 60rpx;
  font-weight: bold;
  color: #d81e06;
  font-family: "黑体";
  text-align: center;
  margin: 20rpx;
}

.bg-infor {
  text-align: center;
}

.bg-star {
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.bg-star view {
  width: 50%;
  height: 6rpx;
  background: #d81e06;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  text-align: center;
  margin: 20rpx 0;
  padding: 20rpx;
  border-bottom: 1px solid #ccc;
}

.textContent {
  width: 100%;
}

.option {
  padding: 10rpx 40rpx;
  padding-bottom: 20rpx;
  box-sizing: border-box;
  background: #fff;
  margin-top: 20rpx;
}

.option view {
  height: 80rpx;
  line-height: 80rpx;
  display: flex;
  justify-content: space-between;
}

.option input {
  height: 80rpx;
  line-height: 80rpx;
  width: 85%;
}

.ok{
  width: 80%;
  margin: 60rpx auto;
  background: #346CFF;
  color: #fff;
}